function _init()
	cls(0)
	music(0)
	spd=18
	bpm=1800/spd
	pulse=100
	last_row = -1
end

function _update60()
	
	if btnp(⬆️) then
		spd -= 1
		setspd(spd)
	end
	if btnp(⬇️) then
		spd += 1
		setspd(spd)
	end
	
	local row = stat(21)
	if row != last_row then
	  if row % 4 == 0 then
	    pulse = 100
	    sfx(3)
	  end
	  last_row = row
	end
 
	if pulse>0 then
	 pulse -= 10 * (bpm/100)
	 pulse = max(pulse, 0)
	end
end

function _draw()
	cls()
	print(bpm)
	print(pulse)
	print("row: "..stat(21))
	circfill(64, 64, 7 + 21*pulse/100, 7)
end
-->8
function setsfxspeed(id, speed)
  local sfx_base = 0x3200
  local sfx_size = 68

  if id < 0 or id > 63 then return end
  local addr = sfx_base + id * sfx_size + 65
  poke(addr, speed)
end

function setspd(spd)
	music(-1)
	setsfxspeed(0,spd)
	setsfxspeed(2,spd)
	bpm = 1800/spd
	music(0)
end


