function setsfxspeed(id, speed)
  local sfx_base = 0x3200
  local sfx_size = 68

  if id < 0 or id > 63 then return end
  local addr = sfx_base + id * sfx_size + 65
  poke(addr, speed)
end

function setspd(spd)
	music(-1)
	setsfxspeed(0,spd)
	setsfxspeed(2,spd)
	bpm = 1800/spd
	beatlength=60/bpm
	music(0)
end

