function check_scheduled_sfx()
  local pattern, row = 0, stat(21)
  for s in all(scheduled_sfx) do
    if pattern == 0 and row == (s.beat * 4) % 64 then
      sfx(s.id)
      del(scheduled_sfx, s)
    end
  end
end


